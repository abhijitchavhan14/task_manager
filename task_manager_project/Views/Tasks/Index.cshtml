@model IEnumerable<task_manager_project.Models.TaskItem>

<h2>Task List</h2>
<a class="btn btn-primary" asp-action="Create">Add Task</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate?.ToShortDateString()</td>
                <td>@task.Priority</td>
                <td>@task.Status</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                    @if (task.Status != "Completed")
                    {
                        <a class="btn btn-sm btn-success" asp-action="MarkComplete" asp-route-id="@task.Id">Mark Complete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

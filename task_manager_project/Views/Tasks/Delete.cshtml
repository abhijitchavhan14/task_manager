@model task_manager_project.Models.TaskItem
<div class="home-container">
    <h2>Delete Task</h2>

    <h4>Are you sure you want to delete this task?</h4>
    <div class="border p-3 mt-3">
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Due Date</dt>
            <dd class="col-sm-10">@Model.DueDate?.ToShortDateString()</dd>

            <dt class="col-sm-2">Priority</dt>
            <dd class="col-sm-10">@Model.Priority</dd>

            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@Model.Status</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-delete">Delete</button>
        <a asp-action="Index" class="btn btn-secondary btn-delete">Cancel</a>
    </form>
</div>
